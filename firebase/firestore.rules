rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isTeacher() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
    }
    
    match /students/{studentId} {
      allow read: if request.auth != null; // Teachers need to read students
      allow write: if isAdmin();
    }
    
    match /subjects/{subjectId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /attendance/{recordId} {
      allow read: if request.auth != null;
      allow create: if isTeacher() || isAdmin();
      allow update, delete: if isAdmin(); // Only admin can edit attendance
    }
    
    match /payments/{paymentId} {
      allow read, write: if isAdmin();
    }
  }
}